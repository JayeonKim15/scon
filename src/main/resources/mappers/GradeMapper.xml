</resultMap>

		<!--  성적 조회 (gradeList) Complete -->
		<select id="findAllGrade" resultMap="gradeResultMap">
			SELECT
			    C.MEMBER_ID
			  , C.CLS_NAME
              , C.CLS_ID
			  , M.MEMBER_NAME
              , G.GRADE_ID
              , G.GRADE
			  FROM TB_CLASS C
			  JOIN TB_MEMBER M ON (C.MEMBER_ID = M.MEMBER_ID)
              JOIN TB_GRADE G ON (M.MEMBER_ID = G.MEMBER_ID)
			  WHERE C.CLS_ID = #{ clsId }
		</select>
		
		<!--  성적 수정 Complete -->
		<update id="updateGrade">
			UPDATE TB_GRADE
			   SET grade = #{grade}
			 WHERE grade_id = #{gradeId}  
		</update>
		
		<!--  성적 입력 학생 조회(insertGrade) Complete -->
		<select id="findAllStudent" resultMap="gradeResultMap">
