			INSERT
				INTO TB_GRADE
				(
			     GRADE_ID
			   , MEMBER_ID
			   , CLS_ID
			   , GRADE
			   , GRADE_DATE
				)
				VALUES
				(
					SEQ_GRADE.NEXTVAL
