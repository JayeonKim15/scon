			FROM TB_GRADE G JOIN TB_MEMBER M ON (G.MEMBER_ID = M.MEMBER_ID)
			                JOIN TB_CLASS C ON (G.CLS_ID = C.CLS_ID)
			WHERE G.CLS_ID = #{ cldId }
